<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE logback:configuration>
<configuration>
	<property name="LOG_PATH" value="${LOG_PATH:-./logs}" />
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date{YYYY-MM-dd HH:mm:ss.SSS} %level [%thread] %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="RETAIL-FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/myretail.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${LOG_PATH}/myretail.%i.log.zip</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>2</maxIndex>
		</rollingPolicy>

		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>50MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<pattern>%date{YYYY-MM-dd HH:mm:ss.SSS} %level [%thread]
				[%file:%line] %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="RETAIL" level="DEBUG" additivity="false">
		<appender-ref ref="RETAIL-FILE" />
		<!-- <appender-ref ref="STDOUT"/> -->
	</logger>

	<logger name="org.mongodb.driver" level="INFO" />

	<!-- -->
	<root level="info">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="RETAIL-FILE" />
	</root>

</configuration>